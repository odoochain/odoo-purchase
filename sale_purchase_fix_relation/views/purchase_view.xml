<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.sale_purchase_fix_relation.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="sale_id"/>
                </field>
            </field>
        </record>
        
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.sale_purchase_fix_relation.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="action_view_purchases" type="object" class="oe_stat_button" icon="fa-shopping-cart" attrs="{'invisible': [('purchase_count', '=', 0)]}">
                        <field name="purchase_count" widget="statinfo" string="Purchases"/>
                    </button>
                </div>
            </field>
        </record>
        
    </data>
</odoo>
